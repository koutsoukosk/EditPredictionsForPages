@model IEnumerable<CoronaPredictionsAspNetCore.Models.PointSystem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            <th>
                @Html.DisplayNameFor(model => model.MoreOrEqualThanDif)
            </th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessOrEqualThanDif)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryPoints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoreOrEqualThanDif)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessOrEqualThanDif)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryPoints)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PointSystemID"><i class="fas fa-edit"></i> Edit </a> 
                <a asp-action="Details" asp-route-id="@item.PointSystemID"><i class="fas fa-info"></i> Details </a> 
                <a asp-action="Delete" asp-route-id="@item.PointSystemID"><i class="fas fa-trash-alt"></i> Delete </a>
            </td>
        </tr>
}
    </tbody>
</table>
